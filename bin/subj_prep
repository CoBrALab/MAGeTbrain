#!/bin/bash

set -euo pipefail

subject=$1
resmodel=$2
xfm=$3
modelsubject=$4
cropmodel=$5

bestlinreg_maget -clobber -nmi -lsq12 $subject $cropmodel $xfm
xfminvert -clobber $xfm $(dirname $xfm)/$(basename $xfm .xfm)_inverse.xfm

mincresample -clobber -sinc -like $cropmodel -2 -transform $xfm $subject $modelsubject
